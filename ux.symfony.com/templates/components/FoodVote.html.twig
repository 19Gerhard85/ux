<tr {{ attributes }}>
    <th>{{ food.name }}</th>
    <td>
        Votes: <span class="badge bg-secondary"></span>{{ food.votes }}
    </td>
    <td style="width: 250px;">
        {% if hasVoted %}
            <div class="alert alert-success">
                Thanks for voting! <twig:Icon name="circle-check" />
            </div>
        {% else %}
            <button
                type="button"
                class="btn btn-secondary"
                data-action="live#action"
                data-action-name="vote(direction=up)"
            >
                <twig:Icon name="arrow-up" />
            </button>
            <button
                type="button"
                class="btn btn-secondary"
                data-action="live#action"
                data-action-name="vote(direction=down)"
            >
                <twig:Icon name="arrow-down" />
            </button>
        {% endif %}
    </td>
</tr>
